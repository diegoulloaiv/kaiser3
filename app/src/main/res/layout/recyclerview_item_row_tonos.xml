<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_tono"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:layout_weight="2"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/txt_numero_tono"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/txt_nombre_tono"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Negro Natural"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageButton
        android:id="@+id/btn_minus_tono"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="2"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/txt_cantidad_tono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="1"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageButton
        android:id="@+id/btn_modificar_usuario2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_weight="2"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/plus" />
</LinearLayout>